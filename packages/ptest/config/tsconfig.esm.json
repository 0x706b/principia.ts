{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "declaration": false,
    "sourceMap": true,
    "module": "esnext",
    "target": "es2018",
    "rootDir": "../src-esm",
    "outDir": "../dist/dist/esm",
    "tsBuildInfoFile": "../tsbuildinfo/esm.tsbuildinfo",
    "plugins": [
      {
        "transform": "@principia/compile",
        "moduleMap": {
          "^src/(.*)": ["@principia/ptest", "_src", "$1"]
        },
        "tracing": false,
        "relativeProjectRoot": "../../"
      }
    ]
  },
  "exclude": ["../build", "../dist", "../node_modules", "../test"],
  "include": ["../src-esm"]
}
