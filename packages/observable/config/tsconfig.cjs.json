{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "declaration": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "rootDir": "../src",
    "outDir": "../dist/dist/cjs",
    "tsBuildInfoFile": "../tsbuildinfo/cjs.tsbuildinfo",
    "plugins": [
      {
        "transform": "@principia/compile",
        "tracing": false,
        "addExtensions": false
      }
    ]
  },
  "exclude": ["../build", "../dist", "../node_modules", "../test"],
  "include": ["../src"]
}
